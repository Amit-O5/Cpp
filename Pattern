#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of rows: ";
    cin >> n;

    for(int i = 1; i <= n; ++i) {
        for(int j = i; j < n; ++j)
            cout << " ";
        for(int k = 1; k <= (2*i-1); ++k)
            cout << "*";
        cout << endl;
    }
    return 0;
}

#Diamond Pattern
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of rows: ";
    cin >> n;
    int space = n - 1;

    // upper half of the diamond
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= space; j++)
            cout << " ";
        space--;
        for (int j = 1; j <= 2 * i - 1; j++)
            cout << "*";
        cout << endl;
    }

    // lower half of the diamond
    space = 1;
    for (int i = 1; i <= n - 1; i++) {
        for (int j = 1; j <= space; j++)
            cout << " ";
        space++;
        for (int j = 1; j <= 2 * (n - i) - 1; j++)
            cout << "*";
        cout << endl;
    }
    return 0;
}

#...Floydâ€™s Triangle
#include <iostream>
using namespace std;

int main() {
    int n, num = 1;
    cout << "Enter the number of rows: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            cout << num << " ";
            num++;
        }
        cout << endl;
    }
    return 0;
}

